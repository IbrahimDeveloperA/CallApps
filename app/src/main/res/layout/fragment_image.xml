<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/prim"
    tools:context=".ui.ImageFragment">

        <androidx.cardview.widget.CardView
            app:layout_constraintBottom_toTopOf="@id/btn_rate"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="match_parent"
            android:layout_marginTop="36dp"
            app:cardCornerRadius="12dp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginBottom="64dp"
            android:layout_height="0dp">
            <TextView
                android:textColor="@color/tv_shadow"
                android:textSize="34sp"
                android:text="Image"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </androidx.cardview.widget.CardView>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btn_rate"
        android:layout_marginBottom="16dp"
        android:layout_marginHorizontal="20dp"
        android:background="@drawable/btn_exit"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/btn_start">

        <ImageView
            android:src="@drawable/like"
            app:layout_constraintTop_toTopOf="@id/tv_rate_us"
            app:layout_constraintEnd_toStartOf="@id/tv_rate_us"
            android:layout_width="wrap_content"
            app:layout_constraintBottom_toBottomOf="@id/tv_rate_us"
            android:layout_height="wrap_content"/>

        <TextView
            android:paddingVertical="10dp"
            android:id="@+id/tv_rate_us"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingHorizontal="10dp"
            android:text="Rate us"
            android:textColor="@color/tv_blue"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:textColor="@color/white"
            android:textSize="14sp"
            android:background="@drawable/btn_record"
            android:paddingVertical="12dp"
            android:gravity="center"
            android:text="START"
            android:textStyle="bold"
            android:layout_marginHorizontal="20dp"
            android:layout_marginBottom="16dp"
            android:id="@+id/btn_start"
            app:layout_constraintBottom_toTopOf="@id/btn_exit"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btn_exit"
        android:layout_marginBottom="64dp"
        android:layout_marginHorizontal="20dp"
        android:background="@drawable/btn_exit"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:src="@drawable/exit_door"
            app:layout_constraintTop_toTopOf="@id/tv_exit"
            app:layout_constraintEnd_toStartOf="@id/tv_exit"
            android:layout_width="wrap_content"
            android:layout_marginTop="6dp"
            app:layout_constraintBottom_toBottomOf="@id/tv_exit"
            android:layout_height="wrap_content"/>

        <TextView
            android:paddingVertical="10dp"
            android:id="@+id/tv_exit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingHorizontal="10dp"
            android:text="Exit"
            android:textColor="@color/tv_blue"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>