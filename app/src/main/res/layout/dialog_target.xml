<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_margin="12dp"
    android:padding="12dp"
    android:layout_height="wrap_content"
    app:cardCornerRadius="12dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/btn_no"
            android:layout_gravity="end"
            android:layout_margin="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_vector_x"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:layout_gravity="center"
            android:src="@drawable/ic_play_video"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_marginTop="24dp"
            android:textColor="#0C1A3F"
            android:textSize="16sp"
            android:fontFamily="@font/ff_montserrat_alternates_regular"
            android:id="@+id/tv_title"
            android:layout_margin="16dp"
            android:textAlignment="center"
            android:text="Watch the short video to unlock the character "
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:text="2/3"
            android:textSize="20sp"
            android:layout_gravity="center"
            android:id="@+id/tv_number"
            android:textColor="#5A77EF"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/ff_montserrat_alternates_regular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="20dp"
            android:layout_gravity="center"
            android:layout_marginHorizontal="16dp"
            android:layout_height="wrap_content">

            <TextView
                android:text="WATCH AD"
                android:textSize="14sp"
                android:textColor="@color/white"
                android:fontFamily="@font/ff_montserrat_alternates_regular"
                android:gravity="center"
                android:id="@+id/btn_yes"
                android:paddingVertical="14dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:background="@drawable/btn_record"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <ProgressBar
                android:id="@+id/progress_bar"
                android:indeterminateTint="@color/white"
                android:background="@drawable/loading_ad"
                app:layout_constraintBottom_toBottomOf="@id/btn_yes"
                app:layout_constraintTop_toTopOf="@id/btn_yes"
                app:layout_constraintEnd_toEndOf="@id/btn_yes"
                app:layout_constraintStart_toStartOf="@id/btn_yes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>


</androidx.cardview.widget.CardView>